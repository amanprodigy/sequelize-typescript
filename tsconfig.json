{
    "compilerOptions": {
        "lib": [
          "es2017",
          "es2016",
          "es2015",
          "dom"
        ],
        "sourceMap": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "moduleResolution": "node",
        "noUnusedParameters": false,
        "outDir": "out",
        "types": ["node"],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
          "node_modules/@types"
        ],
        "baseUrl": "./src",
        "paths": {
            "@app/*": ["*"],
            "@db/*": ["db/*"]
        }
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "out/**/*",
        "test/**/*",
        "test/*",
        "__tests__/**/*"
    ],
    "include": ["src/**/*"]
}
